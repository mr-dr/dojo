<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#001429"
    android:padding="@dimen/standard_padding">

    <com.dojo.lit.view.DojoTextView
        android:id="@+id/create_room_tv"
        style="@style/InitLitBtn"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toTopOf="@id/join_room_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/create_room" />
    <com.dojo.lit.view.DojoTextView
        android:id="@+id/join_room_tv"
        style="@style/InitLitBtn"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_room_tv"
        android:text="@string/join_room"/>

</androidx.constraintlayout.widget.ConstraintLayout>