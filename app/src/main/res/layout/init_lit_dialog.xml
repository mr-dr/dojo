<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/error_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Please fill all fields"
        android:textColor="@color/colorError"
        android:layout_margin="@dimen/standard_margin"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/logs_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of logs"
        android:layout_marginTop="@dimen/standard_margin_half"
        android:layout_marginLeft="@dimen/standard_margin_double"
        android:layout_marginRight="@dimen/standard_margin_double"
        android:layout_marginBottom="@dimen/standard_margin_half"/>

    <EditText
        android:id="@+id/game_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Game room code"
        android:layout_marginTop="@dimen/standard_margin_half"
        android:layout_marginBottom="@dimen/standard_margin_half"
        android:layout_marginLeft="@dimen/standard_margin_double"
        android:layout_marginRight="@dimen/standard_margin_double"/>

    <EditText
        android:id="@+id/alias_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your alias/nickname"
        android:layout_marginTop="@dimen/standard_margin_half"
        android:layout_marginBottom="@dimen/standard_margin_half"
        android:layout_marginLeft="@dimen/standard_margin_double"
        android:layout_marginRight="@dimen/standard_margin_double"/>

    <EditText
        android:id="@+id/player_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Your player no."
        android:layout_marginTop="@dimen/standard_margin_half"
        android:layout_marginBottom="@dimen/standard_margin_half"
        android:layout_marginLeft="@dimen/standard_margin_double"
        android:layout_marginRight="@dimen/standard_margin_double"/>
        />

</LinearLayout>