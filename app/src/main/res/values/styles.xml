<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LitPlayerNames">
        <item name="olSheet">true</item>
        <item name="olSheetGradientAngle">tl_br</item>
        <item name="olSheetCornerRadius">@dimen/standard_corner_radius</item>
        <item name="olSheetStrokeColor">@color/txt_inverted</item>
        <item name="olSheetStrokeWidth">1dp</item>
        <item name="olSheetStrokeDashWidth">4dp</item>
        <item name="olSheetStrokeDashGap">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/give_you_glory</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:textColor">@color/txt_inverted</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DojoDialogTextStyle">
        <item name="android:fontFamily">@font/architects_daughter</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/txt_inverted</item>
        <item name="android:textColorHint">@color/txt_inverted_opacity_50</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DojoDialogButtonStyle" parent="DojoDialogTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="olSheet">true</item>
        <item name="olSheetCornerRadius">5dp</item>
        <item name="olSheetStartColor">@color/white</item>
        <item name="olSheetEndColor">@color/txt_inverted_opacity_50</item>
    </style>

    <style name="DojoTxnBtnStyle" parent="DojoDialogTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/architects_daughter</item>
        <item name="android:paddingStart">@dimen/standard_padding_half</item>
        <item name="android:paddingEnd">@dimen/standard_padding_half</item>
        <item name="android:paddingTop">@dimen/standard_padding_x_half</item>
        <item name="android:paddingBottom">@dimen/standard_padding_x_half</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_green</item>
<!--        <item name="olSheet">true</item>-->
    </style>

    <style name="InitLitBtn">
        <item name="android:minHeight">100dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin_double</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin_double</item>
        <item name="android:fontFamily">@font/advent_pro_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:textColor">@color/txt_inverted</item>
        <item name="android:textSize">22sp</item>
        <item name="olSheet">true</item>
        <item name="olSheetCornerRadius">10dp</item>
        <item name="olSheetEndColor">@color/blue_bg</item>
        <item name="olSheetGradientAngle">br_tl</item>
        <item name="olSheetStartColor">#0052A3</item>
        <item name="olSheetStrokeColor">#0052a3</item>
        <item name="olSheetStrokeWidth">4dp</item>
    </style>

</resources>
